{
  "compilerOptions": {
      "baseUrl": "./",
      "experimentalDecorators": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "paths": {
          "@2048/*": [
              "./src/2048/*"
          ]
      },
      "removeComments": true,
      "sourceMap": true,
      "strictBindCallApply": true,
      "strictNullChecks": true,
      "target": "es6"
  },
  "include": [
      "src/**/*.ts"
  ]
}
